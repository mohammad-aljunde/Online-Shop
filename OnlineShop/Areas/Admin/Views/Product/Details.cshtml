@model Product
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Details Product </h2>


<form >
    
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" readonly />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" class="form-control" readonly />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>

            @*<div class="form-group row">
                <div class="col-4">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Image" type="file" class="form-control"  />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>*@

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsAvailable" class="" readonly="readonly" type="checkbox" />
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="ProductTypes.ProductType" class="control-label col-4"></label>
                @*<select class="form-control col-8" asp-for="ProductTypesId" asp-items="ViewBag.productTypesList" readonly>
                    <option value="">--- Choose Product Type ---</option>
                </select>*@
                <input asp-for="ProductTypesId" class="form-group col-8" readonly />
                <span asp-validation-for="ProductTypes.ProductType" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="SpecialTags.SpecialTag" class="control-label col-4"></label>
                @*<select class="form-control col-8" asp-for="SpecialTagsId" asp-items="ViewBag.specialTagsList" readonly>
                    <option value="">--- Choose Special Tag ---</option>
                </select>*@
                <input asp-for="SpecialTagsId" class="form-group col-8" readonly/>
                <span asp-validation-for="SpecialTags.SpecialTag" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id" >Edit</a>
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>
        </div>
        <div class="col-1">
        </div>
        <div class="col-3">
            <img src="@Url.Content(Model.Image)" style="border-radius:5px;border:2px solid #efefef;  width:100%" />

        </div>


    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
