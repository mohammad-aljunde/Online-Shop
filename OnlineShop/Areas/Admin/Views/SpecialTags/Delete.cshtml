@model SpecialTags
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Delete Special Tags</h2>


<form asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpecialTag"></label>
            </div>
            <div class="col-5">
                <input asp-for="SpecialTag" readonly class="form-control" />
            </div>
            <span asp-validation-for="SpecialTag" class="text-danger"></span>
        </div>
        <div class="form-group">
            <p class="lead">Do You Want to delete this Product ? </p>

            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>


