@model List<Product>
@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>
<br />

<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Product Type</th>
                <th>Color</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@Url.Content(item.Image)" style="width:300px; height:300px;"/></td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductTypes.ProductType</td>
                    <td>@item.ProductColor</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-controller="Home" asp-area="Customer" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
        <a class="btn btn-success" asp-action="Index" asp-controller="Home">Back to Home</a>
    </div>
    <div class="col-6 text-right">
        <h3>Total Ammount</h3>
        <h3>Grant Total : @Model.Sum(c => c.Price)</h3>
        <a class="btn btn-success" asp-area="Customer" asp-action="CheckOut" asp-controller="Order">Process to cheack Out</a>
    </div>
</div>